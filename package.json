{
  "name": "@usex/llmpeg",
  "version": "1.0.0",
  "description": "AI-powered FFmpeg command generator. Describe your video task in plain English, get the perfect FFmpeg command instantly.",
  "type": "module",
  "module": "src/index.ts",
  "bin": {
    "llmpeg": "./src/cli.ts"
  },
  "sideEffects": false,
  "keywords": ["ffmpeg", "ai", "cli", "video", "audio", "converter", "openai", "claude", "gemini", "grok", "media"],
  "author": "LLmpeg Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/llmpeg.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/llmpeg/issues"
  },
  "homepage": "https://github.com/yourusername/llmpeg#readme",
  "logo": "https://raw.githubusercontent.com/yourusername/llmpeg/main/assets/logo.svg",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm --minify --sourcemap --splitting",
    "start:dev": "bun --bun --env-file=.env.development run src/index.ts",
    "start:prod": "bun --bun --env-file=.env.production.local run src/index.ts",
    "test:types": "tsc --noEmit",
    "format": "prettier --write \"**/*.ts\"",
    "preinstall": "bunx only-allow bun"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.5.3",
    "@types/figlet": "^1.7.0"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/google": "^1.2.18",
    "@ai-sdk/openai": "^1.3.22",
    "@ai-sdk/xai": "^1.2.16",
    "ai": "^4.3.16",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "dotenv": "^16.5.0",
    "figlet": "^1.8.1",
    "gradient-string": "^3.0.0",
    "ora": "^8.2.0"
  },
  "packageManager": "bun@1.2.15"
}
